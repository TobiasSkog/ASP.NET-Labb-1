@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label class="control-label">Choose an Employee</label>
                <select class="form-control" name="id" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Back to Search page</a>
</div>